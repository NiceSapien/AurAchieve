# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network requests to Google Analytics when you run `pod install`.
# To disable this, uncomment the following line.
# ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure \"flutter pub get\" is executed first"
  end

  File.read(generated_xcode_build_settings_path).strip.match(/FLUTTER_ROOT=(.*)/)[1]
end

require_relative File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper')

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    # This script forces all pods to use a specific Swift version.
    # It can help prevent compiler errors with older pods on newer Xcode versions.
    target.build_configurations.each do |config|
      # FIX: Updated Swift version to 5.9, which is compatible with modern Firebase SDKs and Xcode 15.
      config.build_settings['SWIFT_VERSION'] = '4.2'
    end
  end
end